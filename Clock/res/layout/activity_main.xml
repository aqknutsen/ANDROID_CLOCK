<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation = "vertical"
    tools:context="com.example.clock.MainActivity" >

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/radioGroup"
        android:visibility="invisible">
        <RadioButton android:id="@+id/radio_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button12"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/radio_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button24"
            android:onClick="onRadioButtonClicked"/>


    </RadioGroup>


    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/radioGroup2"
        android:visibility="invisible">

        <RadioButton android:id="@+id/radio_PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonPM"
            android:onClick="onRadioButtonClicked2"
            android:layout_gravity="right"
            android:layout_below="@+id/radioGroup"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioButton android:id="@+id/radio_AM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonAM"
            android:onClick="onRadioButtonClicked2"
            android:layout_gravity="right"
            android:layout_below="@+id/radio_PM"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false" />

    </RadioGroup>


    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPickerMin"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPickerHour"
        android:layout_alignTop="@+id/numberPickerMin"/>

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPickerSec"
        android:layout_alignTop="@+id/numberPickerMin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:focusable="true" />

    <TextView
        android:id = "@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/timer"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/radioGroup2"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:editable="false"></TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync World"
        android:id="@+id/world"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/milTime"
        android:layout_gravity="center_horizontal"
        android:checked="false"
        android:layout_alignTop="@+id/world"
        android:layout_alignLeft="@+id/numberPickerSec"
        android:layout_alignStart="@+id/numberPickerSec" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/syncButton"
        android:src="@drawable/ic_public_24dp"
        android:background="#00ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onSyncButtonClicked"
        android:backgroundTintMode="multiply"
        android:tint="#ababab" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Military"
        android:id="@+id/textView"
        android:layout_above="@+id/milTime"
        android:layout_alignEnd="@+id/milTime"
        android:layout_toLeftOf="@+id/milTime"
        android:visibility="invisible" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/numberPickerMin"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dropdown"
        android:visibility="invisible" />

</RelativeLayout>
